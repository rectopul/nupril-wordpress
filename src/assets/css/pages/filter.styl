.form-local.description
    position static

    form
        > div
            position relative

            .form-group
                position static !important

                &:hover
                    .filter-first-select
                        display flex

                label
                    position relative !important
                    width 100%

                    &:after
                        right 0 !important

.filter-first-select
    position absolute
    background-color white
    width 100%
    max-height 280px
    border-radius 10px
    border solid 1px $ice-blue
    padding 30px
    z-index 2
    display none
    flex-wrap wrap

    &--item
        cursor pointer
        &:hover
            text-decoration underline