.categories
    header
        border-bottom 0
        
    h2
        font-size 2.2rem
        font-weight 600
        color color1

    h4
        font-size 1.7rem
        font-weight 500
        color color2

    &__item
        img
            width 100%
            height auto
        
        a
            position relative
            display flex
            border-radius 10px
            overflow hidden
            margin 0
            max-height 267px
            

            &:before
                content  ''
                background-color rgba(46, 44, 123, .7)
                width 100%
                height 100%
                position:absolute
                top 0
                left 0
                z-index 1
                transition all .2s ease-out

            &:hover
                &:before
                    opacity 0

                span
                    color color2
                figure
                    transform: scale(1.2)
                    transition transform .2s ease-out

            figure
                margin 0
                transition transform .3s ease-out
                transform: scale(1)

            span
                position absolute
                left 50%
                top 50%
                transform translate(-50%, -50%)
                z-index 2
                font-size 1.6rem
                font-weight 600
                font-stretch normal
                font-style normal
                line-height normal
                letter-spacing normal
                text-align center
                color white