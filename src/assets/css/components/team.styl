.saudation
    background-color  #f8f8f8
    //Font
    font-family Overpass
    font-size 17px
    font-weight normal
    font-stretch normal
    font-style normal
    line-height 1.18
    letter-spacing normal
    text-align left
    color #171717
    & h2
        font-size 35px
        font-weight 800
        line-height 0.91
        color #171717



.containerTeam
    height 100%
    margin auto 0
    font-family Overpass
    font-size 17px
    font-weight normal
    font-stretch normal
    font-style normal
    line-height 1.88
    letter-spacing normal
    text-align left
    color #a5a5a5
    
    @media (max-width: 991px)
        padding-left 0
        padding-right 0
        overflow-x hidden
        background-color #f8f8f8
        & > .swiperTeam
            min-width 150%
            margin-left -25%
        & .swiper-arrow
            display none
    & h6
        font-family Overpass
        font-size 25px
        font-weight 100
        font-stretch normal
        font-style normal
        line-height 1.28
        letter-spacing normal
        text-align left
        color #171717
        margin 0
    & .swiperTeam
        width 100%
        margin-top 46px

.swiper-arrow
    display flex
    justify-content space-between
    padding 0 15px
    width 170px
    margin-top 30px
    & svg
        fill #57fff9
        width 58.1px
        height 36.8px
    & > div
        flex 0 0 50%
        text-align right
        &.team-button-prev
            text-align left
            transform rotate(-180deg)
