.content-about
    &__image
        figure
            overflow hidden
            border-radius 10px
            img
                width 100%

    &__text
        display flex
        flex-direction column
        justify-content center
        
        h2
            font-size 2.2rem
            font-weight 600
            color color1

        h4
            font-size 1.7rem
            color color2
            font-weight 500

        article
            font-size 1rem
            font-weight normal
            font-stretch normal
            font-style normal
            line-height 1.87
            letter-spacing normal
            text-align justify
            color color3

