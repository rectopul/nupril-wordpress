.categories-banner
    display flex
    flex 1
    height 280px
    background-color $windows-blue

    @media screen and (min-width 1024px)
        &.swiper-containe
            margin-left 15px
            margin-right 15px

    .swiper-pagination-bullet
        width 10px
        height 10px
        border solid 1px $pale-grey-two
        opacity 1
        background-color transparent

        &.swiper-pagination-bullet-active
            background-color $white

    &__item
        display flex
        > span
            display flex
            justify-content center
            align-items center
            width 100%
            height 100%
            flex-wrap wrap
            padding-top 15px
            padding-bottom 15px

            @media screen and (min-width 1024px)
                padding-top 0
                padding-bottom 0

            figure
                margin 0
                flex 0 0 100%
                text-align center
                padding-left 35%
                padding-right 35%

                img
                    margin 0 auto

                @media screen and (min-width 1024px)
                    flex 0 0 198px
                    padding 0

            article
                flex 0 0 auto
                margin-top auto
                margin-bottom auto
                text-align center

                @media screen and (min-width 1024px)
                    margin-left 70px
                    text-align left

                h1
                    font-size 1.8rem
                    font-weight normal
                    font-stretch normal
                    font-style normal
                    line-height normal
                    letter-spacing 3px
                    color $white

                h2
                    font-size 1.5rem
                    font-weight 600
                    font-stretch normal
                    font-style normal
                    line-height normal
                    letter-spacing normal
                    text-transform uppercase
                    color $light-navy-blue

                    @media screen and (min-width 1024px)
                        font-size 2.2rem

                a
                    width 150px
                    height 48px
                    border-radius 24px
                    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.1)
                    background-color $white
                    display flex
                    align-items center
                    justify-content center
                    margin 0 auto
                    

                    font-size 1rem
                    font-weight 600
                    font-stretch normal
                    font-style normal
                    line-height normal
                    letter-spacing normal
                    text-align center
                    color $windows-blue

                    @media screen and (min-width 1024px)
                        margin 0
                        margin-top 20px
