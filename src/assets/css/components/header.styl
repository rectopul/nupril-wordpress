.headerFull
    height 100%
    background-size 100% auto
    background-repeat no-repeat
    background-position center
    
    &.singlePage
        background-size auto 100%
        height 1080px
    @media (max-width: 991px)
        background-size auto 100%
        .navbar-toggler
            &[aria-expanded="true"]
                z-index 999999
                top 30px
                right 30px
                position fixed
                > span
                    width 16px
                    height 16px
                    background-size cover
                    background-image: url('data:image/png;base64,')
        & .navbar-collapse
            height 100%
            width 100%
            position fixed
            top 0
            left 0
            background-color #000
            z-index 999998
    & .navbar-dark
        font-size 15px
        font-weight 800
        font-stretch normal
        font-style normal
        line-height 4
        letter-spacing normal
        padding-top 21px
body
    .headerContainer
        height 100%
        @media (max-width: 991px)
            padding-left 35px
            padding-right 35px
            & > nav
                flex-direction row-reverse
                & > button
                    border-width 0
                    & > span.navbar-toggler-icon
                        background-image url('../svg/menu.svg')
        & > .row
            height 100%
        .headerTitle
            height calc(100% - 200px)
            display flex
            flex-direction column
            justify-content center
            & br
                display none
            & p
                font-family Overpass
                font-size 30px
                font-weight 300
                font-stretch normal
                font-style normal
                line-height 1.53
                letter-spacing normal
                text-align left
                color #bcbcbc
                margin-bottom 0
                &:last-child
                    color #fff
                @media (max-width: 991px)
                    font-size 13px
            & h2
                font-family Overpass
                font-size 30px
                font-weight 800
                font-stretch normal
                font-style normal
                line-height 1
                letter-spacing normal
                text-align left
                color #fff
                max-width 200px
            @media (min-width: 1024px)
                & h2
                    font-size 70px
                    max-width initial
                & h2, & p
                    max-width 950px