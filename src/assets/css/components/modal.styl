.idadecr
    display: block
    margin: 40px auto
    text-align: center
    font-family: Dosis;
    font-size: 53px
    font-weight: bold
    font-style: normal
    font-stretch: normal
    line-height: 1.28
    letter-spacing: 2.65px
    color: #666666
.post__list-idade
    display: flex
    flex-flow: row wrap
    justify-content: flex-start
    max-width: 1200px
    margin: 0 auto
    & .idade__item
        flex 0 0 auto
        padding: 2px 80px
        border: solid 1px #626262
        background-color: #FFFFFF
        border-radius: 100px
        text-align: center
        font-size: 29.5px;
        font-weight: bold
        font-style: normal
        font-stretch: normal
        line-height: 2
        letter-spacing: normal
        color: #666666
        margin: 12px 14px
        user-select none
        cursor pointer
        &.selected,
        &:hover
            background-color: #badab5
.list__profsadd
    display: flex
    flex-flow: row wrap
    justify-content: center
    align-items: flex-start
    &-item
        flex: 0 0 33.333333333%
        height 70px
        font-family: Dosis
        font-size: 26px
        font-weight: normal
        font-style: normal
        font-stretch: normal
        line-height: 67px
        letter-spacing: normal
        text-align: center
        color: #666666
        border: solid 1px #626262
        background-color: rgba(0, 0, 0, 0)
        border-radius: 140px
        position relative
        margin: 15px
        & i 
            width: 42px
            height: 42px
            background-color: #545454
            color: #ffffff
            font-size: 36px
            line-height: 33px
            border-radius: 100%
            position: absolute
            top: -20px
            right -20px
            text-align: center
            font-weight: bold
            font-style: normal
            cursor: pointer

.form
    &__personal
        margin-bottom: 120px
        & h1 
            font-family: Dosis
            font-size: 53px
            font-weight: bold
            font-style: normal
            font-stretch: normal
            line-height: 1.28
            letter-spacing: 2.65px
            color: #666666
            & i 
                font-style: normal
    &__contratar
        display: flex
        flex-flow: column nowrap
        align-items: center
        justify-content: flex-start
        max-width: 100%
        padding: 0 15px
        margin: 60px auto
        width: 100%
        @media screen and (min-width: 1367px)
            max-width: 1570px
        @media screen and (min-width: 1024px)
            max-width: 1300px
        & input[type='submit']
            width: 503px
            height: 97px
            background-color: #badab5
            font-family: Dosis;
            font-size: 30px
            font-weight: bold
            font-style: normal
            font-stretch: normal
            text-transform: uppercase
            line-height: 1.03
            letter-spacing: 12.07px
            color: #666666
            margin: 0 auto
            display: block
            border 0
            outline: 0
            appearance none
            margin-bottom: 60px
            &:hover
                opacity 0.7
        & > div 
            width: 1300px
            max-width: 100%
            & form
                width: 100%
                display: block
                margin: 0 auto
                & p
                    display: flex
                    flex-flow: row wrap
                    justify-content: space-between
                    align-items: flex-start
                    & label 
                        flex 0 0 100%
                        padding-left: 0
                        font-family: Dosis
                        font-size: 26px
                        font-weight: normal
                        font-style: normal
                        font-stretch: normal
                        line-height: 1.38
                        letter-spacing: normal
                        color: #5e6271
                        margin-bottom: 70px
                        @media screen and (min-width: 1024px)
                            flex 0 0 50%
                            padding-left: 50px
                        &:nth-child(odd)
                            padding-left: 0
                            padding-right: 0
                            @media screen and (min-width: 1024px)
                                padding-right: 50px
                        & input
                            border: solid 1px #626262
                            background-color: rgba(0, 0, 0, 0)
                            width: 100%
                            height 68px
                            border-radius: 130px
                            display: block
                            margin: 0 auto
                            margin-top: 5px
                            padding: 0 40px
                            font-family: Dosis
                            font-size: 26px
                            font-weight: normal
                            font-style: normal
                            font-stretch: normal
                            color: #5e6271

.modal
    &__service
        width: 100vw
        height 100vh
        position fixed
        left 0
        top: 0
        display: flex
        flex-flow: row nowrap
        justify-content: center
        align-items: center
        background-color: rgba(0,0,0,0.7)
        z-index: 10
    &__container
        width: 100%
        max-width: 1170px
        background-color: #ffffff
        display: flex
        flex-flow: column nowrap
        justify-content: flex-start
        align-items: center
        border-radius: 3px
        position relative
        padding: 40px
        @media screen and (max-width: 993px)
            width: calc(100% - 30px)
        &.close
            animation-name: slide-out
            animation-duration: 500ms
    &__close
        font-size: 50px
        height 50px
        color: #badab5
        position absolute
        font-weight: bold
        top 10px
        right 20px
        text-align: center
        display: block
        line-height: 35px
        cursor: pointer
        user-select none
        &:hover
            opacity 0.7

    &__title
        font-family: Dosis
        font-size: 40px
        font-weight: bold
        font-style: normal
        font-stretch: normal
        line-height: 1.08
        letter-spacing: 2px
        color: #666666
        text-align: center
        @media screen and (max-width: 993px)
            font-size: 20px
            & h1 
                font-size: 25px
        & h3 
            font-weight: normal
    &__body
        padding: 40px
        & input 
            width: 279px
            height: 70px
            border: solid 1px #626262
            background-color: rgba(0, 0, 0, 0)
            border-radius: 140px
            line-height: 70px
            font-size: 20px
            font-family: Dosis
            font-weight: bold
            padding: 0 25px
    &__footer
        & button 
            width: 325px
            height: 60px
            background-color: #badab5
            font-family: Dosis
            font-size: 22px
            font-weight: bold
            font-style: normal
            font-stretch: normal
            text-transform: uppercase
            line-height: 0.76
            letter-spacing: 2.2px
            color: #414142
            border: 0
            outline: 0
            &:hover
                opacity 0.7
@keyframes slide-out
		from
            opacity 1
            -webkit-transform translate(0px,0px)
        to
            opacity 0
            -webkit-transform translate(0px,-100vh)

    
