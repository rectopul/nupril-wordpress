.whereToBuy
    padding-top 100px
    padding-bottom 100px

    &__image
        max-height 245px
        figure
            height 100%
            overflow hidden
            margin 0
            border-radius 10px
            display flex
            align-items center


    &__text
        display flex
        flex-direction column
        justify-content center

    h2
        font-size 2rem
        font-weight 600
        color $light-navy-blue

    p
        font-size 1rem
        font-weight 400
        line-height 1.87
        letter-spacing normal
        text-align justify
        color $brownish-grey