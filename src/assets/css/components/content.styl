body
    .descriptionJob
        background-color #f8f8f8
        position relative
        font-family Overpass
        padding 80px 35px
        padding-left 35px
        padding-right 35px
        padding-bottom 0
        &:before
            content ''
            width: 50vw
            height 100%
            position absolute
            display block
            right 0
            top 0
            background-color #f8f8f8
            z-index -1
        @media (min-width: 1024px)
            padding 150px 15px
        & h3
            font-size 25px
            font-weight 800
            font-stretch normal
            font-style normal
            line-height 1.33
            letter-spacing normal
            text-align left
            color #171717
            @media (min-width: 1024px)
                font-size 30px
            
        
        & p
            font-size 14px
            font-weight normal
            font-stretch normal
            font-style normal
            line-height 1.11
            letter-spacing normal
            text-align left
            color #a5a5a5
            @media (min-width: 1024px)
                font-size 18px
        & .jobsList
            margin-top 37px
            list-style none
            font-size 17px
            font-weight 600
            font-stretch normal
            font-style normal
            line-height 1.29
            letter-spacing normal
            text-align left
            color #171717

            & > li
                margin-bottom 30px
                &:first-child
                    margin-bottom 70px
                    @media (max-width: 991px)
                        margin-bottom 40px
                &:last-child
                    display flex
                    align-items center
                    @media (max-width: 991px)
                        display none
                &:nth-child(even)
                    @media (max-width: 991px)
                        text-align right
                    & h2
                        &:after
                            right 0
                            left initial
            & br
                height 0
                display none
                @media (min-width: 1024px)
                    height 10px
                    display block
            & p 
                color #171717   
                margin 0
                font-size 17px
                @media (max-width: 991px)
                    display none
            & h2
                font-size 25px
                font-weight 800
                line-height 1.28
                position relative
                z-index 2
                display inline-block
                &:after
                    content ''
                    width 90%
                    height 21px
                    background-color #57fff9
                    position absolute
                    left 0
                    top 2px
                    z-index -1
