.first-products 
    background-color color2
    color white
    font-size 1rem
    font-weight 400

    align-items flex-end
    display flex
    padding-top 30px
    padding-bottom 30px

    @media screen and (min-width 1024px)
        max-height 265px

    &__products
        a
            display flex
            overflow hidden
            border-radius 10px
            align-items center
            max-height 295px

    &__text
        display flex
        flex-direction column
        justify-content center
        align-self flex-end
        margin-bottom 30px

        h4
            font-size 1.7rem
            font-weight 500